<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
    "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<module name="Checker">
  <property name="charset" value="UTF-8"/>
  
  <module name="TreeWalker">
    <module name="JavadocType"/>
    <module name="JavadocMethod"/>
    <module name="JavadocVariable"/>
    
    <module name="EmptyBlock">
      <property name="option" value="TEXT"/>
      <property name="tokens" value="LITERAL_TRY, LITERAL_FINALLY"/>
    </module>
    
    <module name="LineLength">
      <property name="max" value="120"/>
    </module>
    
    <module name="NewlineAtEndOfFile"/>
    
    <module name="OuterTypeFilename"/>
    
    <module name="RedundantModifier">
      <property name="allowPackagePrivateMembers" value="true"/>
    </module>
    
    <module name="UnusedImports"/>
    
    <module name="RegexpSingleline">
      <property name="format" value="^\s*\/\*\*\s*$"/>
      <property name="message" value="Javadoc should not be empty"/>
    </module>
    
    <module name="RegexpSingleline">
      <property name="format" value="^\s*\*+\s+@return\s*$"/>
      <property name="message" value="@return tag should have a description"/>
    </module>
    
    <module name="RegexpSingleline">
      <property name="format" value="^\s*\*+\s+@param\s+\w+\s*$"/>
      <property name="message" value="@param tag should have a description"/>
    </module>
  </module>
  
  <module name="SuppressionCommentFilter"/>
</module>

